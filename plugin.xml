<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-advance-downloader" version="0.0.1">
  <name>Cordova Plugin Advance Downloader</name>
  <description>High functionality download plugin for cordova</description>
	<engines>
		<engine name="cordova-android" version=">=7.1.0" />
	</engines>
  <js-module src="www/AdvanceDownloader.js" name='AdvanceDownloader' >
    <clobbers target="AdvanceDownloader" />
  </js-module>

  <platform name="android" kotlin="1.3.60">

   <config-file target="res/xml/config.xml" parent="/*">
      <feature name="AdvanceDownloader">
        <param name="android-package" value="jp.rabee.AdvanceDownloader"/>
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <!-- Add Kotlin support -->
    <hook type="after_plugin_add" src="scripts/android/support-kotlin.js" />
    <hook type="after_platform_add" src="scripts/android/support-kotlin.js" />
    <framework src="org.jetbrains.kotlin:kotlin-stdlib-jdk8:1.3.60" />
    <apply-plugin>kotlin-android-extensions</apply-plugin>
    <apply-plugin>kotlin-kapt</apply-plugin>

    <!-- Cleanup Kotlin source on uninstall -->
    <hook type="before_plugin_rm" src="scripts/android/uninstall.js" />
    <hook type="before_plugin_uninstall" src="scripts/android/uninstall.js" />

    <!-- soruce -->
    <source-file src="src/android/AdvanceDownloader.kt" target-dir="app/src/main/java/jp/rabee"/>

    <!--gradle file-->
    <source-file src="src/android/build-extras.gradle" target-dir="."/>
  </platform>


  <!-- iOS -->
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="AdvanceDownloader">
        <param name="onload" value="true" />
        <param name="ios-package" value="CDVAdvanceDownloader" />
      </feature>

      <preference name="deployment-target" value="11.0" />
    </config-file>
    <!-- source -->
    <source-file src="src/ios/CDVAdvanceDownloader.swift" />
    <source-file src="src/ios/CDVAdvanceDownloader-Bridging-Header.h" />

    <!-- ios -->
    <podspec>
      <config>
        <source url="https://github.com/CocoaPods/Specs.git"/>
      </config>
      <pods use-frameworks="true">
        <pod name="Alamofire" spec="~> 5.2" />
      </pods>
    </podspec>

    <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>
    <preference name="UseSwiftLanguageVersion" default="5" />
  </platform>
</plugin>
